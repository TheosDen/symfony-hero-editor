{% extends 'base.html.twig' %}

{% block body %}
    <h1>Hero</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ hero.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ hero.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ hero.description }}</td>
            </tr>
            <tr>
                <th>Createdat</th>
                <td>{% if hero.createdAt %}{{ hero.createdAt|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('hero_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('hero_edit', { 'id': hero.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
